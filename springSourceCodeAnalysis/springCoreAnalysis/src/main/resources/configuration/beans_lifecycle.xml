<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
	xmlns:aop="http://www.springframework.org/schema/aop" xmlns:tx="http://www.springframework.org/schema/tx"
	xsi:schemaLocation="
            http://www.springframework.org/schema/beans 
            http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="beanPostProcessor" class="com.gxq.learn.spring.bean.lifecycle.MyBeanPostProcessor">
	</bean>

	<bean id="instantiationAwareBeanPostProcessor"
		class="com.gxq.learn.spring.bean.lifecycle.MyInstantiationAwareBeanPostProcessor">
	</bean>

	<bean id="beanFactoryPostProcessor"
		class="com.gxq.learn.spring.bean.lifecycle.MyBeanFactoryPostProcessor">
	</bean>

	<bean id="person" class="com.gxq.learn.spring.bean.lifecycle.Person"
		init-method="myInit" destroy-method="myDestory" scope="singleton"
		p:name="张三" p:address="广州" p:phone="15900000000" />

</beans>